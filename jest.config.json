{
    "collectCoverage": true,
    "coverageReporters": [
        "lcov"
    ],
    "projects": [
        {
            "transform": {
                "^.+\\.ts?$": "ts-jest"
            },
            "preset": "ts-jest",
            "moduleFileExtensions": [
                "ts",
                "tsx",
                "js",
                "jsx",
                "json",
                "node"
            ],
            "testMatch": [
                "**/*.test.ts"
            ],
            "testEnvironment": "node",
            "moduleNameMapper": {
                "^(\\.\\.?\\/.+)\\.js$": "$1"
            }
        }
    ]
}